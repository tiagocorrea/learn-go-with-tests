# .editorconfig file for Go projects
root = true

[*]
# General settings for all files
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.go]
# Settings specific to Go files
indent_style = tab
indent_size = 4

[*.md]
# Settings for specific file types
indent_style = space
indent_size = 2

[*.{yaml,yml}]
# Settings for YAML files
indent_style = space
indent_size = 2

[Makefile]
# Makefiles should use tabs
indent_style = tab
